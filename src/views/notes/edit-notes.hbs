<div class="column is-half is-offset-one-quarter">
  <div class="card">
    <header class="card-header">
      <p class="card-header-title">
        Edit Note
      </p>
      <a href="#" class="card-header-icon" aria-label="more options">
        <span class="icon">
          <i class="fas fa-angle-down" aria-hidden="true"></i>
        </span>
      </a>
    </header>
    {{#if note}}
    <div class="card-content">
      <div class="content">
        <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">
          <div class="field">
            <div class="control">
              <input class="input" name="title" value="{{note.title}}"type="text" placeholder="Enter Title" autofocus>
            </div>
          </div>
          <div class="field">
            <div class="control">
              <textarea class="textarea" name="description" placeholder="Enter Description">{{note.description}}</textarea>
            </div>
          </div>
          <div class="field">
          <div class="control is-block">
            <button type="submit" class="button is-primary">Edit</button>
          </div>
          </div>
        </form>
      </div>
    </div>
    {{/if}}
  </div>
</div>